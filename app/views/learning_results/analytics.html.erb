<%= javascript_include_tag "application", params[:controller] %>
<h2><i class="fa fa-angle-right"></i>Comparar estilos de aprendizagem</h2>
<div class="row mt">
    <div class="col-lg-12">
      <div class="content-panel">
            <div class="row mt">
                <div class="col-lg-6">
                    <%= form_tag({ :controller => "learning_results", :action => "analytic_list"}, { :id => "form2"}) do |f| %>
                    <h3>Seleção 1</h3>
                    <div class="campo_compare">
                        <%= label_tag :Instituição %><br>
                        <%= collection_select(nil, :institution_id, Institution.order(:nome), :id, :nome) %>
                    </div>
                    <div class="campo_compare">
                        <%= label_tag :Campus %><br>
                        <%= grouped_collection_select(nil, :campu_id, Institution.order(:nome), :campus, :nome, :id, :name)%>
                    </div>
                    <div class="campo_compare">
                        <%= label_tag :Centro %><br>
                        <%= grouped_collection_select(nil, :center_id, Campu.order(:name), :centers, :name, :id, :name)%>
                    </div>
                    <div class="campo_compare">
                        <%= label_tag :Curso %><br>
                        <%= grouped_collection_select(nil, :course_id, Center.order(:name), :courses, :name, :id, :nome)%>
                    </div>
                    <div class="campo_compare">
                        <%= label_tag :Disciplina %><br>
                        <%= grouped_collection_select(nil, :subject_id, Course.order(:nome), :subjects, :nome, :id, :nome)%>
                    </div>
                    <div class="campo_compare">
                        <%= label_tag :Turma %><br>
                        <%= grouped_collection_select(nil, :classroom_id, Subject.order(:nome), :classrooms, :nome, :id, :codigo)%>
                    </div>
                    <div class="campo_compare">
                        <%= label_tag :Alunos %><br>
                        <%= grouped_collection_select(nil, :users_id, Classroom.order(:codigo), :users, :codigo, :id, :nome)%>
                     </div>
                </div>
                <div class="col-lg-6">
                        <h3>Seleção 2</h3>
                        <div class="campo_compare">
                            <%= label_tag :Instituição %><br>
                            <%= collection_select(nil, :institution2_id, Institution.order(:nome), :id, :nome) %>
                        </div>
                        <div class="campo_compare">
                            <%= label_tag :Campus %><br>
                            <%= grouped_collection_select(nil, :campu2_id, Institution.order(:nome), :campus, :nome, :id, :name)%>
                        </div>
                        <div class="campo_compare">
                            <%= label_tag :Centro %><br>
                            <%= grouped_collection_select(nil, :center2_id, Campu.order(:name), :centers, :name, :id, :name)%>
                        </div>
                        <div class="campo_compare">
                            <%= label_tag :Curso %><br>
                            <%= grouped_collection_select(nil, :course2_id, Center.order(:name), :courses, :name, :id, :nome)%>
                        </div>
                        <div class="campo_compare">
                                <%= label_tag :Disciplina %><br>
                                <%= grouped_collection_select(nil, :subject2_id, Course.order(:nome), :subjects, :nome, :id, :nome)%>
                        </div>
                        <div class="campo_compare">
                                <%= label_tag :Turma %><br>
                                <%= grouped_collection_select(nil, :classroom2_id, Subject.order(:nome), :classrooms, :nome, :id, :codigo)%>
                        </div>
                        <div class="campo_compare">
                                <%= label_tag :Alunos %><br>
                                <%= grouped_collection_select(nil, :users2_id, Classroom.order(:codigo), :users, :codigo, :id, :nome)%>
                        </div>
                </div>
        </div>
        <div class="row mt">
            <div class="col-lg-12">
                <center>
                    <%= submit_tag "Enviar", :class => "btn btn-primary btn-lg"  %>
                    <% end %>
                </center>
            </div>
        </div>
    </div>
</div>
</div>
