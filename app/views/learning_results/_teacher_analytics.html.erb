<%= javascript_include_tag 'search_learning' %>
<h2><i class="fa fa-angle-right"></i>Comparar estilos de aprendizagem</h2>
<div class="row mt">
    <div class="col-lg-12">
      <div class="content-panel">
        <div class="row mt">
          <div class="col-lg-6">
    <%= form_tag({ :controller => "learning_results", :action => "analytic_list"}, { :id => "form2"}) do |f| %>
    <div class="field">
              <h3>Seleção 1:</h3>
              <%= hidden_field_tag :institution_id, @institution.id %>

              <%= hidden_field_tag :campu_id, @campu.id %>

              <%= hidden_field_tag :center_id, @center.id %>

              <%= hidden_field_tag :course_id, @course.id %>

              <div class="campo_compare">
                    <%= label_tag :Disciplina %>
                    <%= collection_select(nil, :subject_id, @subjects, :id, :nome)%>
                </div>
                <div class="campo_compare">
                <%= label_tag :ano %>
                <%= select_tag "ano", options_for_select(@anos)%>
                </div>
                <div class="campo_compare">
                <%= label_tag :semestre %>
                <%= select_tag "semestre", options_for_select(@semestres)%>
                </div>
                <div class="campo_compare">
                <%= label_tag :Turma %>
                <%= collection_select(nil, :classroom_id, @classrooms, :id, :codigo)%>
                </div>
                <div class="campo_compare">
                <%= label_tag :Usuarios %>
                <%= collection_select(nil, :users_id, @students, :id, :nome)%>
      </div>
              </div>
          </div>
          <div class="col-lg-6">
            <h3>Seleção 2:</h3>
            <div class="field">
              <%= hidden_field_tag :institution2_id, @institution.id %>

              <%= hidden_field_tag :campu2_id, @campu.id %>

              <%= hidden_field_tag :center2_id, @center.id %>

              <%= hidden_field_tag :course2_id, @course.id %>

              <div class="campo_compare">
                    <%= label_tag :Disciplina %>
                    <%= collection_select(nil, :subject2_id, @subjects, :id, :nome)%>
                </div>
                <div class="campo_compare">
                <%= label_tag :ano %>
                <%= select_tag "ano2", options_for_select(@anos)%>
                </div>
                <div class="campo_compare">
                <%= label_tag :semestre %>
                <%= select_tag "semestre2", options_for_select(@semestres)%>
                </div>
                <div class="campo_compare">
                <%= label_tag :Turma %>
                <%= collection_select(nil, :classroom2_id, @classrooms, :id, :codigo)%>
                </div>
                <div class="campo_compare">
                <%= label_tag :Usuarios %>
                <%= collection_select(nil, :users2_id, @students, :id, :nome)%>
      </div>
            </div>
          </div>
        </div> <br>
        <center><%= submit_tag "Enviar", :class => "btn btn-primary btn-sm" %></center>

<% end %>

</div>
</div>
</div>