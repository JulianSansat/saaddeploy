<%= javascript_include_tag "createPdf"%>
<%= javascript_include_tag "createCsv"%>

<div id="graphic" style="min-width: 400px; max-width: 600px; height: 400px; margin: 0 auto"></div>
<%= form_tag(compare_by_date_learning_results_path, method: 'post', :remote => true) do %>
  <h2><%= @selecao %></h2>
  <%= hidden_field_tag "selecao", @selecao %>
  <%= select_tag(:data_final, options_for_select(@datas)) %>
  <% @results.map(&:id).each do |id| %>
    <%= hidden_field_tag "results[]", id %>
  <% end %>

  <table id="tabela_resultados">
    <thead>
      <tr>
      <th>Usuario</th>
      <th>Data final</th>
      <th>Ec</th>
      <th>Or</th>
      <th>Ca</th>
      <th>Ea</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody  id="media">

    </tbody>
  </table>


  <br>

  <h2><%= @selecao2 %></h2>
  <%= hidden_field_tag "selecao2", @selecao2 %>
  <%= select_tag(:data_final2, options_for_select(@datas2)) %>
  <% @results2.map(&:id).each do |id| %>
    <%= hidden_field_tag "results2[]", id %>
  <% end %>

  <table id="tabela_resultados2">
    <thead>
      <tr>
      <th>Usuario</th>
      <th>Data final</th>
      <th>Ec</th>
      <th>Or</th>
      <th>Ca</th>
      <th>Ea</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody  id="media2">

    </tbody>
  </table>


<%= submit_tag "Comparar" %>
<% end %>
