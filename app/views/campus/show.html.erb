<p id="notice"><%= notice %></p>
<div class="content-panel">
<div class="row mt">
  <div class="col-lg-12">
    <div class="content-panel">
      <h4><i class="fa fa-angle-right"></i> Campus</h4>
      <br>
      <section id="unseen">
        <table class="table table-bordered table-striped table-condensed">
          <thead>
            <tr>
              <th>Nome</th>
              <th>Instituição</th>
            </tr>
          </thead>

          <tbody>
              <tr>
                <td><%= @campu.name %></td>
                <td><%= @campu.institution.nome %></td>
                <% if current_user.type == 'Administrator'%>
                <td><%= link_to 'Editar', edit_campu_path(@campu) %></td>
                <% end %>
              </tr>
          </tbody>

        </table>

        <br>
        </section>
      </div>
    </div>
  </div>

  <div class="row mt">
  <div class="col-lg-12">
      <div class="content-panel">
      <h4><i class="fa fa-angle-right"></i>Centros</h4>
        <div class="row mt">
                <div class="col-lg-12">
                      <div>
                          <div class="unseen">
                            <div class="dados">
                          <table class="table table-bordered table-striped table-condensed">
                            <thead>
                              <tr>
                                <th>Nome</th>
                              </tr>
                            </thead>
                            <tbody>
                              <% if @centers.size > 0 %>
                              <% @centers.each do |center| %>
                                <tr>
                                  <td><%= center.name %></td>
                                  <td><center><%= button_to 'Abrir', center, :class => "btn btn-primary btn-sm", method: :get%></center></td>
                                </tr>
                              <% end %>
                              <% end %>
                            </tbody>
                          </table>
                          </div>
                          </div>
                      </div>
                  </div>
              </div>
          </div>
      </div>
  </div>
  <br>

<div class="row">
    <div class="col-md-4 col-md-offset-5">
    <h4><i class="fa fa-angle-right"></i>Adicionar Centro</h4>
<%= form_for(@center) do |f| %>
  <% if @center.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@center.errors.count, "error") %> prohibited this center from being saved:</h2>

    </div>
  <% end %>

  <div class="field">
    <%= f.label :nome %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.hidden_field :campu_id, :value => @campu.id %>
  </div>
  <div class="actions">
    <%= f.submit "Adicionar Centro", :class => "btn btn-success btn-lg"%>
  </div>
  </div>
  </div>
<% end %>

</div>