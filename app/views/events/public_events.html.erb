<p id="notice"><%= notice %></p>

<h1>Eventos</h1>

<div class="row mt">
  <div class="col-lg-12">
    <div class="content-panel">
      <h4><i class="fa fa-angle-right"></i> Proximos eventos</h4>
      <section id="unseen">
        <table class="table table-bordered table-striped table-condensed">
          <thead>
            <tr>
              <th>Nome</th>
              <th>Apresentacao</th>
              <th>Objetivos</th>
              <th>Inicio</th>
              <th>Fim</th>
              <th>Aceita Submissão?</th>
              <th>Criado por</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @events.each do |event| %>
              <tr>
                <td><%= event.nome %></td>
                <td><%= event.apresentacao %></td>
                <td><%= event.objetivos %></td>
                <td><%= event.inicio.strftime("%-d/%-m/%y: %H:%M") %></td>
                <td><%= event.fim.strftime("%-d/%-m/%y: %H:%M") %></td>
                <% if event.submissao %>
                    <td>Sim</td>
                <% else %>
                    <td>Não</td>
                <% end %>
                <td><%= event.user.nome %></td>
                <td><%= link_to 'Ver', event %></td>
              </tr>
            <% end %>
          </tbody>
        </table>

        <br>
        </section>
      </div>
    </div>
  </div>
