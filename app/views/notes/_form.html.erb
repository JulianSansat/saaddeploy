<%= form_for(Note.new, remote: true) do |f| %>

  <div class="field">
    <%= f.label :texto %><br>
    <%= f.text_area :texto %>
  </div>
  <div class="field">
    <%= f.hidden_field :topico, :value => topico, readonly: true %>
  </div>
  <div class="field">
    <%= f.hidden_field :sender_id, :value => current_user.id %>
  </div>
  <div class="field">
    <%= f.hidden_field :recipient_id, :value => @plano.user.id %>
  </div>

  <div class="actions">
    <%= f.submit "Criar Observação"%>
  </div>
<% end %>
