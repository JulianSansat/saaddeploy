<p id="notice"><%= notice %></p>

<%= link_to 'Edit', edit_classroom_path(@classroom) %> |
<%= link_to 'Back', classrooms_path %>

<p>
  <strong>Disciplina:</strong>
  <%= @classroom.subject.nome %>
</p>

<p>
  <strong>Turno:</strong>
  <%= @classroom.turno %>
</p>

<p>
  <strong>Codigo:</strong>
  <%= @classroom.codigo %>
</p>

<%= form_tag add_user_classrooms_path, :method => 'get' do%>

<div class="field">
    <%= label_tag :user_id %><br>
    <%= autocomplete_field_tag :user_id, params[:user], autocomplete_user_nome_classrooms_path%>
</div>

<%= hidden_field_tag :classroom_id, @classroom.id %>

<div class="actions">
   <%= submit_tag "adicionar" %>
</div>
<% end %>

<strong>Usuarios Participantes: </strong><br>

<strong>Professores</strong>
<% @classroom.teachers.each do |user| %>
    <p>
    <strong>id:</strong>
    <%= user.id %>
    </p>
    <p>
    <strong>Nome:</strong>
    <%= user.nome %> <%= link_to "remover", remove_user_classrooms_path(user: user, classroom: @classroom)%>
    </p>
    <p>
    <strong>Tipo:</strong>
    <%= user.type %>
    </p>
<% end %>
<br>
<strong>Estudantes</strong>
<% @classroom.students.each do |user| %>
    <p>
    <strong>id:</strong>
    <%= user.id %>
    </p>
    <p>
    <strong>Nome:</strong>
    <%= user.nome %> <%= link_to "remover", remove_user_classrooms_path(user: user, classroom: @classroom)%>
    </p>
    <p>
    <strong>Tipo:</strong>
    <%= user.type %>
    </p>


<% end %>

