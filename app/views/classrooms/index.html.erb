<p id="notice"><%= notice %></p>
<h2><i class="fa fa-angle-right"></i>Turmas</h2>
<div class="row mt">
  <div class="col-lg-12">
    <div class="content-panel">
      <div class="row mt">
        <div class="col-lg-12">
            <table class="table table-bordered table-striped table-condensed">
              <thead>
                <tr>
                  <th>Disciplina</th>
                  <th>Turno</th>
                  <th>Codigo</th>
                  <th colspan="3"><center>Ações</center></th>
                </tr>
              </thead>

              <tbody>
                <% @classrooms.each do |classroom| %>
                  <tr>
                    <td><%= link_to classroom.subject.nome, classroom.subject %></td>
                    <td><%= classroom.turno %></td>
                    <td><%= classroom.codigo %></td>
                    <td><%= link_to 'Detalhes', classroom %></td>
                    <td><%= link_to 'Editar', edit_classroom_path(classroom) %></td>
                    <td><%= link_to 'Excluir', classroom, method: :delete, data: { confirm: 'Deseja realmente excluir?' } %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
        </div>
      </div>
    </div>
  </div>
</div>
<center><br><%= link_to 'Nova turma', new_classroom_path, :class => "btn btn-success btn-lg" %></center>