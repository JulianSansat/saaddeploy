<%= form_for(Activity.new, authenticity_token: true, remote: true) do |f| %>

  <div class="field">
    <%= f.label :data %><br>
    <%= f.datetime_select :data %>
  </div>
  <div class="field">
    <%= f.label :nome %><br>
    <%= f.text_field :nome %>
  </div>
  <div class="field">
    <%= f.label :palestrante %><br>
    <%= f.text_field :palestrante %>
  </div>
  <div class="field">
    <%= f.hidden_field :event_id, :value => @event.id %>
  </div>
  <div class="actions">
    <%= f.submit "criar atividade"%>
  </div>
<% end %>