<div class="col-lg-4 col-md-4 col-sm-4 mb">
<div class="grey-panel pn donut-chart">
    <div class="grey-header">
        <%= threat.text %>
    </div>
    Respostas:
    <br>
    <% threat.threats_answers.each do |answer|%>
        <%= answer.text %>
        <%= link_to 'Deletar', answer, method: :delete, remote: true, data: { confirm: 'Deletar Força?' }%>
        <br>
    <% end %>
    <div class="modal fade"  class="modali" id="<%= threat.id%>new_threat_answers_modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4 class="modal-title" id="myModalLabel">Criar nova resposta de Ameaça</h4>
          </div>
          <div class="modal-body">
            <%# Render the new person form (passing modal => true to enable remote => true) %>
            <%= render 'threats_answers/form', modal: true, :locals => {:teste => threat.id} %>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Fechar</button>
          </div>
        </div>
      </div>
    </div>

    <%= link_to 'Nova Resposta', "##{threat.id}new_threat_answers_modal", 'data-toggle' => 'modal' %>
    <%= link_to 'Deletar', threat, method: :delete, remote: true, data: { confirm: 'Deletar Força?' }%>
</div>
</div>