<h2><i class="fa fa-angle-right"></i>Cursos</h2>
<div class="row mt">
    <div class="col-lg-12">
      <div class="content-panel">
            <div class="row mt">
                <div class="col-lg-12">
                <table class="table table-bordered table-striped table-condensed">
                  <thead>
                    <tr>
                      <th>Nome</th>
                      <th>Data abertura</th>
                      <th>Turno</th>
                      <th>Centro</th>
                      <th colspan="3"><center>Ações</center></th>
                    </tr>
                  </thead>

                  <tbody>
                    <% @courses.each do |course| %>
                      <tr>
                        <td><%= course.nome %></td>
                        <td><%= course.data_abertura %></td>
                        <td><%= course.turno %></td>
                        <td><%= course.center.name %></td>
                        <td><%= link_to 'Detalhes', course %></td>
                        <td><%= link_to 'Editar', edit_course_path(course) %></td>
                        <td><%= link_to 'Excluir', course, method: :delete, data: { confirm: 'Deseja realmente excluir?' } %></td>
                      </tr>
                    <% end %>
                  </tbody>
                </table>
                </div>
            </div>
      </div>
</div>
<center><%= link_to 'Novo curso', new_course_path, :class => "btn btn-success btn-lg" %></center>
