<h2>Cadastro</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

    <div class="field">
    <%= f.label :nome %><br>
    <%= f.text_field :nome %>
  </div>
  <div class="field">
    <%= f.label :telefone %><br>
    <%= f.text_field :telefone %>
  </div>
  <div class="field">
    <%= f.label :endereco %><br>
    <%= f.text_field :endereco %>
  </div>
  <div class="field">
    <%= f.label :lattes %><br>
    <%= f.text_field :lattes %>
  </div>
   <div class="field">
    <%= f.label :biografia %><br>
    <%= f.text_area :biografia %>
  </div>
  <div class="field">
    <%= f.label :tipo%><br>
    <%= f.select :type, [['Estudante', 'Student'], ['Professor','Teacher']]%>
  </div>
  <div class="field">
    <%= f.label :matricula %><br>
    <%= f.text_field :matricula %>
  </div>

  <div class="field">
    <%= f.label :foto %><br>
    <%= f.file_field :avatar %>
  </div>

  <div class="field">
    <%= label_tag :institution %><br>
    <%= f.collection_select :institution_id, Institution.order(:nome), :id, :nome, include_blank: true%>
  </div>

  <div class="field">
    <%= f.grouped_collection_select :course_id, Institution.order(:nome), :courses, :nome, :id, :nome, include_blank: true%>
  </div>


  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :senha %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :confirmaÃ§Ã£o_senha %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "users/shared/links" %>
