<%= javascript_include_tag 'search_learning' %>
<div class="row mt">
    <div class="col-lg-12">
      <div class="content-panel">
<%= form_for(@line_case) do |f| %>
<div class="field">
    <h3>Caso de Ensino: <%= @study_case.title%></h3>

    <%= hidden_field_tag :institution_id, @institution.id %>

    <%= hidden_field_tag :campu_id, @campu.id %>

    <%= hidden_field_tag :center_id, @center.id %>

    <%= hidden_field_tag :course_id, @course.id %>

    <div class="campo_compare">
    <%= label_tag :Disciplina %>
    <%= collection_select(nil, :subject_id, @subjects, :id, :nome)%>
    </div>
    <div class="campo_compare">
    <%= label_tag :Turma %>
    <%= collection_select(nil, :classroom_id, @classrooms, :id, :codigo)%>
    </div>
    <div class="campo_compare">
    <%= label_tag :Usuarios %>
    <%= collection_select(nil, :users_id, @students, :id, :nome)%>
    </div>

    <div class="field">
    <%= f.hidden_field :study_case_id, :value => @study_case.id %>
  </div>
  <div class="field">
    <%= f.label :data_final %><br>
    <%= f.date_select :data_final %>
  </div>

  <div class="row mt">
<div class="col-lg-12">
<div class="content-panel">
<h4><i class="fa fa-angle-right"></i> Questões: </h4>
<section id="unseen">
<table class="table table-bordered table-striped table-condensed">
  <thead>
    <tr>
      <th>Enunciado</th>
    </tr>
  </thead>

  <tbody id= "questions">
    <%= render @questions%>
  </tbody>
</table>
</section>
</div>
</div>
</div>

  <input type="checkbox" name="recommended[]" value="graduação" />


  </div>

<div class="row mt">
                <div class="col-lg-12">
                    <br><center><%= submit_tag "Enviar", :class => "btn btn-primary btn-lg"  %></center>
                </div>
            </div>
   <% end %>
</div>
</div>
</div>