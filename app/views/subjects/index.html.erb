<p id="notice"><%= notice %></p>
<h2><i class="fa fa-angle-right"></i>Disciplinas</h2>
<div class="row mt">
    <div class="col-lg-12">
      <div class="content-panel">
            <div class="row mt">
                <div class="col-lg-12">
                <table class="table table-bordered table-striped table-condensed">
                    <thead>
                      <tr>
                        <th>Nome</th>
                        <th>Ch</th>
                        <th>Ementa</th>
                        <th>Codigo</th>
                        <th>Curso</th>
                        <th colspan="3"><center>Ações</center></th>
                      </tr>
                    </thead>

                    <tbody>
                      <% @subjects.each do |subject| %>
                        <tr>
                          <td><%= subject.nome %></td>
                          <td><%= subject.ch %></td>
                          <td><%= subject.ementa %></td>
                          <td><%= subject.codigo %></td>
                          <td><%= subject.course.nome %></td>
                          <td><%= link_to 'Abrir', subject %></td>
                          <td><%= link_to 'Editar', edit_subject_path(subject) %></td>
                          <td><%= link_to 'Deletar', subject, method: :delete, data: { confirm: 'Deseja realmente excluir?' } %></td>
                        </tr>
                      <% end %>
                    </tbody>
                  </table>
                </div>
            </div>
      </div>
</div>
<center><br><%= link_to 'Nova disciplina', new_subject_path, :class => "btn btn-success btn-lg" %></center>