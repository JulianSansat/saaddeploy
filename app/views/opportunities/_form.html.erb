<% modal ||= false %>
<% remote = modal ? true : false %>
<%= form_for(Opportunity.new, remote: remote, html: {role: :form, 'data-model' => 'opportunity'}) do |f| %>

  <div class="field">
    <%= f.label :text, class: 'control-label' %><br>
    <%= f.text_field :text, class: 'form-control' %>
    <span class="help-block"></span>
  </div>
  <div class="field">
    <%= f.hidden_field :plano_id, :value => @plano.id %>
  </div>
  <div class="actions">
    <%= f.submit "criar oportunidade"%>
  </div>
<% end %>
