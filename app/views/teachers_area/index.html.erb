<h1>TeachersArea#index</h1>
<h2>SAAD</h2>
<p>Bem vindo <%= current_user.nome%></p>
<%= link_to 'Procurar planos de carreira', teachers_area_search_plans_path %><br>
<%= link_to 'Criar Questionario de ancoras', new_quiz_path %><br>
<%= link_to 'Buscar resultados', search_results_path %><br>
<%= link_to 'Comparar resultados', analytics_results_path %><br>
<%= link_to 'Cria Questionario de estilos de aprendizagem', new_learning_quiz_path %><br>
<%= link_to 'Buscar resultados de estilos de aprendizagem', search_learning_results_path %><br>
<%= link_to 'Comparar resultados de estilos de aprendizagem', analytics_learning_results_path %>

<% if @my_quizzes != nil && @my_quizzes.size > 0%>
  <div class="alert alert-warning">
    <p>Voce tem Questionarios para responder, clique nas datas</p>
      <% @my_quizzes.each do |quiz| %>
        <%= link_to "#{quiz.data_final}", quiz_index_path(:data_final => quiz.data_final) %><br>
      <% end %>
  </div>
<% end %>

<% if @my_learning_quizzes != nil && @my_learning_quizzes.size > 0%>
  <div class="alert alert-info">
    <p>Voce tem Questionarios de estilo de aprendizagem para responder, clique nas datas</p>
      <% @my_learning_quizzes.each do |quiz| %>
        <%= link_to "#{quiz.data_final}", new_learning_result_path(:data_final => quiz.data_final) %><br>
      <% end %>
  </div>
<% end %>
<p>
    <strong>Minhas Turmas</strong>
</p>
<table>
  <thead>
    <tr>
      <th>Disciplina</th>
      <th>Turno</th>
      <th>Codigo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @classrooms.each do |classroom| %>
      <tr>
        <td><%= classroom.subject.nome %></td>
        <td><%= classroom.turno %></td>
        <td><%= classroom.codigo %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>