<%= javascript_include_tag "application", params[:controller] %>
<h2><i class="fa fa-angle-right"></i>Criar Atividade Extra</h2>
<div class="row mt">
    <div class="col-lg-12">
      <div class="content-panel">
            <div class="row mt">
                <div class="col-lg-8">
                    <%= form_tag({ :controller => "teachers_area", :action => "create_atividade_extra"}, { :id => "form_video", :multipart => true}) do |f| %>
                    <div class="campo_compare">
                      <%= label_tag :titulo %><br>
                      <%= text_field_tag :titulo %>
                    </div>
                    <div class="campo_compare">
                      <%= label_tag :descricao %><br>
                      <%= text_area_tag :descricao %>
                    </div>
                    <div class="campo_compare">
                      <%= label_tag :data_final %><br>
                      <%= date_select(:data_final, :data_final, order: [:day, :month, :year]) %>
                    </div>
                    <div class="campo_compare">
                      <%= label_tag :arquivo %><br>
                      <%= file_field_tag :arquivo %>
                    </div>
               </div>
               <div class="col-lg-4">
                    <div class="campo_compare">
                      <%= label_tag :Turma %>
                      <%= grouped_collection_select(nil, :classroom_id, @subjects, :classrooms, :nome, :id, :codigo)%>
                  </div>
                  <div class="campo_compare">
                      <%= label_tag :Usuarios %>
                      <%= grouped_collection_select(nil, :users_id, @classrooms, :students, :codigo, :id, :nome)%>
                  </div>
              </div>
            </div>
            <div class="row mt">
                <div class="col-lg-12">
                    <div class="actions">
                      <center><%= submit_tag "Enviar", :class => "btn btn-primary btn-lg" %></center>
                    </div>
                  <% end %>
                </div>
            </div>
        </div>
   </div>
</div>