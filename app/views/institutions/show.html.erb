<p id="notice"><%= notice %></p>
<div class="content-panel">
<div class="row mt">
  <div class="col-lg-12">
    <div class="content-panel">
      <h4><i class="fa fa-angle-right"></i>  Instituição</h4>
      <br>
      <section id="unseen">
        <table class="table table-bordered table-striped table-condensed">
          <thead>
            <tr>
              <th>Nome</th>
              <th>Cnpj</th>
              <th>Logradouro</th>
              <th>Numero</th>
              <th>Bairro</th>
              <th>Cep</th>
              <th>Cidade</th>
              <th>Estado</th>
              <th>Tel</th>
              <th>Organização acadêmica</th>
              <th>Categoria administrativa</th>
              <th>Site</th>
            </tr>
          </thead>

          <tbody>
              <tr>
                <td><%= @institution.nome %></td>
                <td><%= @institution.cnpj %></td>
                <td><%= @institution.logradouro %></td>
                <td><%= @institution.numero %></td>
                <td><%= @institution.bairro %></td>
                <td><%= @institution.cep %></td>
                <td><%= @institution.cidade %></td>
                <td><%= @institution.estado %></td>
                <td><%= @institution.tel%></td>
                <td><%= @institution.organizacao_academica%></td>
                <td><%= @institution.categoria_administrativa%></td>
                <td><%= @institution.site%></td>
              </tr>
          </tbody>
        </table>

        <br>
        </section>
      </div>
    </div>
  </div>
  <%if current_user.type == 'Administrator'%>
  <%= link_to 'Editar', edit_institution_path(@institution) %> |
  <%= link_to 'Voltar', institutions_path %>
<% end %>

<div class="row mt">
  <div class="col-lg-12">
      <div class="content-panel">
      <h4><i class="fa fa-angle-right"></i>Campus</h4>
        <div class="row mt">
                <div class="col-lg-12">
                      <div>
                          <div class="unseen">
                            <div class="dados">
                          <table class="table table-bordered table-striped table-condensed">
                            <thead>
                              <tr>
                                <th>Nome</th>
                              </tr>
                            </thead>
                            <tbody>
                              <% if @campus.size > 0 %>
                              <% @campus.each do |campu| %>
                                <tr>
                                  <td><%= campu.name %></td>
                                  <td><center><%= button_to 'Abrir', campu, :class => "btn btn-primary btn-sm", method: :get%></center></td>
                                </tr>
                              <% end %>
                              <% end %>
                            </tbody>
                          </table>
                          </div>
                          </div>
                      </div>
                  </div>
              </div>
          </div>
      </div>
  </div>
  <br>
<div class="row">

    <div class="col-md-4 col-md-offset-5">
    <h4><i class="fa fa-angle-right"></i>Adicionar Campus</h4>
<%= form_for(@campu) do |f| %>
  <% if @campu.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@campu.errors.count, "error") %> prohibited this campu from being saved:</h2>

      <ul>
      <% @campu.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
<br>
  <div class="field">
    <%= f.label :nome %><br>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.hidden_field :institution_id, :value => @institution.id %>
  </div>
  <div class="actions">
    <%= f.submit "Adicionar Campus", :class => "btn btn-success btn-lg"%>
  </div>
  </div>
  </div>

  </div>
<% end %>

