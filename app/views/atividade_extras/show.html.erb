<p id="notice"><%= notice %></p>

<p>
  <strong>Titulo:</strong>
  <%= @atividade_extra.titulo %>
</p>

<p>
  <strong>Descricao:</strong>
  <%= @atividade_extra.descricao %>
</p>

<p>
  <strong>Data final:</strong>
  <%= @atividade_extra.data_final %>
</p>

<p>
<strong>Anexo da Atividade:</strong>
  <%= link_to "Arquivo", @atividade_extra.arquivo.url(:original, false) %>
</p>

<div class="row mt">
  <div class="col-lg-12">
    <div class="content-panel">
      <h4><i class="fa fa-angle-right"></i> Respostas</h4>
      <section id="unseen">
        <table class="table table-bordered table-striped table-condensed">
  <thead>
    <tr>
      <th>Aluno</th>
      <th>Observacao</th>
      <th>Anexo</th>
      <th>Status</th>
      <th></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @atividade_extra.answers.each do |answer| %>
      <tr>
        <td><%= answer.user.nome %></td>
        <td><%= answer.observacao %></td>
        <td><%= link_to "Arquivo", answer.arquivo_resposta.url(:original, false) %></td>
        <td><%= answer.status %></td>
        <td><%= link_to 'Aprovar', answer %></td>
        <td><%= link_to 'Correção', edit_answer_path(answer) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</section>
</div>
</div>
</div>

<%= link_to 'Edit', edit_atividade_extra_path(@atividade_extra) %> |
