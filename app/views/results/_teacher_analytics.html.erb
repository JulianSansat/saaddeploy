<%= javascript_include_tag 'search_learning' %>

<div class="row mt">
    <div class="col-lg-12">
      <div class="content-panel">
        <div class="row mt">
          <div class="col-lg-6">
            <%= form_tag({ :controller => "results", :action => "analytic_list"}, { :id => "form2"}) do |f| %>
