<%= form_tag({ :controller => "results", :action => "list"}, { :id => "form2"}) do |f| %>
<div class="field">

    <%= hidden_field_tag :institution_id, @institution.id %>

    <%= label_tag :Campus %>
    <%= collection_select(nil, :campu_id, @campus, :id, :name)%>

    <%= label_tag :Centro %>
    <%= collection_select(nil, :center_id, 'todos', :id, :name)%>

    <%= label_tag :Curso %>
    <%= collection_select(nil, :course_id, 'todos', :id, :nome)%>

    <%= label_tag :Disciplina %>
    <%= collection_select(nil, :subject_id, 'todos', :id, :nome)%>

    <%= label_tag :Turma %>
    <%= collection_select(nil, :classroom_id, 'todos', :id, :codigo)%>

    <%= label_tag :Usuarios %>
    <%= collection_select(nil, :users_id, 'todos', :id, :nome)%>
  </div>
<%= submit_tag "Enviar" %>
<% end %>