<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/1.1.135/jspdf.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf-autotable/2.0.16/jspdf.plugin.autotable.js"></script>

<%= javascript_include_tag "createPdf"%>
<%= javascript_include_tag "createCsv"%>

<h2><i class="fa fa-angle-right"></i>Buscar âncoras de carreira</h2>
<div class="row mt">
    <div class="col-lg-12">
      <div class="content-panel">
          <h3><%= @selecao %></h3>
          <label>Selecione uma âncora para visualizar</label>
          <%= form_tag(show_by_date_results_path, method: 'post', :remote => true) do %>
          <%= hidden_field_tag "selecao", @selecao %>
          <%= select_tag(:data_final, options_for_select(@datas)) %>
          <% @results.map(&:id).each do |id| %>
          <%= hidden_field_tag "results[]", id %>
        <% end %>
        <%= submit_tag "Ver resultados", :class => "btn btn-primary btn" %>
    <div class="row mt">
      <div class="col-lg-6">
        <div class="tab-pane hidden" id="chartjs">
              <div class="content-panel">
                <div class="panel-body text-center">
                  <div id="graphic"></div>
            </div>
          </div>
        </div>
      </div>
      <div class="col-lg-6">
          <section id="unseen">
            <table id="tabela_resultados" class="table table-bordered table-striped table-condensed">
              <thead>
                <tr>
                  <th>Ordem</th>
                  <th>Pontuação</th>
                  <th>Âncoras</th>
                </tr>
              </thead>
              <tbody  id="media">
              </tbody>
            </table>
          </section>
      </div>
    </div>
    <div class="row mt">
      <div class="col-lg-12">
          <a href="#" id="export" class="btn btn-primary btn-sm btn-success">Exportar CSV</a>
          <div id='exports'></div>
      </div>
    </div>
  </div>
</div>
<% end %>