<p id="notice"><%= notice %></p>
<h2><i class="fa fa-angle-right"></i>Lista de professores</h2>
<div class="row mt">
    <div class="col-lg-12">
      <div class="content-panel">
            <div class="row mt">
                  <div class="col-lg-12">
                      <section id="unseen">
                          <div id = "dados">
                          <table class="table table-bordered table-striped table-condensed">
                              <thead>
                                <tr>
                                  <th>Nome</th>
                                  <th>Telefone</th>
                                  <th>Endereço</th>
                                  <th>Biografia</th>
                                  <th>Matricula</th>
                                  <th>Email</th>
                                  <th colspan="2"><center>Ações</center></th>
                                </tr>
                              </thead>
                              <tbody>
                                <% @teachers.each do |teacher| %>
                                  <tr>
                                    <td><%= teacher.nome %></td>
                                    <td><%= teacher.telefone %></td>
                                    <td><%= teacher.endereco %></td>
                                    <td><%= teacher.biografia %></td>
                                    <td><%= teacher.matricula %></td>
                                    <td><%= teacher.email %></td>
                                    <td><%= link_to 'Excluir', teacher, method: :delete, data: { confirm: 'Deseja realmente excluir?' } %></td>
                                  </tr>
                                <% end %>
                              </tbody>
                          </table>
                          </div>
                      </section>
                  </div>
            </div>
      </div>
</div>