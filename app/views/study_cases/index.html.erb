<p id="notice"><%= notice %></p>

<h1>Listing Study Cases</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Area</th>
      <th>Topic</th>
      <th>Topic2</th>
      <th>Recommended</th>
      <th>Abstract</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @study_cases.each do |study_case| %>
      <tr>
        <td><%= study_case.title %></td>
        <td><%= study_case.author %></td>
        <td><%= study_case.area %></td>
        <td><%= study_case.topic %></td>
        <td><%= study_case.topic2 %></td>
        <td><%= study_case.recommended %></td>
        <td><%= study_case.abstract %></td>
        <td><%= link_to "Arquivo do Caso", study_case.case_file.url(:original, false) %></td>
        <td><%= link_to "Arquivo das notas", study_case.notes_file.url(:original, false) %></td>
        <td><%= link_to 'Show', study_case %></td>
        <td><%= link_to 'Edit', edit_study_case_path(study_case) %></td>
        <td><%= link_to 'Destroy', study_case, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

