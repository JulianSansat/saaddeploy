<p id="notice"><%= notice %></p>
<h2><i class="fa fa-angle-right"></i>Participantes</h2>
<div class="row mt">
    <div class="col-lg-12">
      <div class="content-panel">
            <div class="row mt">
                  <div class="col-lg-12">
                    <section id="unseen">
                      <div id = "dados">
                      <table class="table table-bordered table-striped table-condensed">
                      <h3><i class="fa fa-angle-right"></i>Professores</h3>
                        <thead>
                          <tr>
                            <th>Foto</th>
                            <th>Nome</th>
                            <th>Email</th>
                            <!--<th>Autorizado</th>-->
                          </tr>
                        </thead>

                        <tbody>
                          <% @classroom.teachers.each do |teacher| %>
                            <tr>
                              <td><center><%= image_tag teacher.avatar.url(:thumb), :class => "photos_users"   %></center></td>
                              <td><%= teacher.nome %></td>
                              <td><%= teacher.email %></td>
                            </tr>
                          <% end %>
                        </tbody>
                      </table>
                      <table class="table table-bordered table-striped table-condensed">
                      <h3><i class="fa fa-angle-right"></i>Alunos</h3>
                        <thead>
                          <tr>
                            <th>Foto</th>
                            <th>Nome</th>
                            <th>Matricula</th>
                            <th>Email</th>
                            <!--<th>Autorizado</th>-->
                          </tr>
                        </thead>

                        <tbody>
                          <% @classroom.students.each do |student| %>
                            <tr>
                              <td><center><%= image_tag student.avatar.url(:thumb), :class => "photos_users"   %></center></td>
                              <td><%= student.nome %></td>
                              <td><%= student.matricula %></td>
                              <td><%= student.email %></td>
                            </tr>
                          <% end %>
                        </tbody>
                      </table>


                      </div>
                    </section>
                  </div>
            </div>
      </div>
</div>