<div class="row mt">
  <div class="col-lg-12">
    <div class="content-panel">
      <h4><i class="fa fa-angle-right"></i> Atividades extras</h4>
      <section id="unseen">
        <table class="table table-bordered table-striped table-condensed">
  <thead>
    <tr>
      <th>Titulo</th>
      <th>Descricao</th>
      <th>Data final</th>
      <th>Autor</th>
      <th>Status</th>
      <th>Arquivo</th>
      <th></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @atividades.each do |atividade_extra| %>
    <% if atividade_extra.status == 'aberta' %>
      <tr>
        <td><%= atividade_extra.titulo %></td>
        <td><%= atividade_extra.descricao %></td>
        <td><%= atividade_extra.data_final %></td>
        <td><%= atividade_extra.sender.nome %></td>
        <td><%= atividade_extra.status%></td>
        <td><%= link_to "Arquivo", atividade_extra.arquivo.url(:original, false) %></td>
        <td><%= link_to "responder", new_answer_path(:atividade_extra => atividade_extra) %></td>
        <td><%= link_to "ver respostas", student_area_list_answers_path(:atividade_extra => atividade_extra)%></td>
      </tr>
    <% end %>
    <% end %>
  </tbody>
</table>

</section>

</div>
</div>
</div>

<br>