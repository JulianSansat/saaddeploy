<h2><i class="fa fa-angle-right"></i>SAAD TV</h2>
<div class="row mt">
  <div class="col-lg-12">
      <div class="content-panel">
        <div class="row mt">
        <% if @videos != nil %>
            <% @videos.each do |video| %>
            <div class="col-lg-6">
                <div class="row mt">
                    <div class="col-lg-8">
                        <iframe width="540" height="340" src="<%= "http://www.youtube.com/embed/"+ video.url %>"></iframe>
                    </div>
                    <div class="col-lg-4">
                        <p>
                            <strong>Título:</strong> Título do vídeo<br>
                            <strong>Enviado por:</strong> <%= video.sender.nome%><br>
                            <strong>Descrição:</strong> <%= video.description %><br>
                            <%= link_to "Excluir", student_area_unsubscribe_video_path(video: video), :class => "btn btn-danger btn-sm"%>
                        </p>
                    </div>
                </div>
            </div>
            <% end %>
        <% end %>
        </div>

      </div>
  </div>
</div>